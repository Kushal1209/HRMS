@model HRMS.Models.AssignTaskModel

@{
    ViewData["Title"] = "Add New Task";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddNewTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmpID" class="control-label"></label>
                        <input asp-for="EmpID" class="form-control" />
                        <span asp-validation-for="EmpID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TaskID" class="control-label"></label>
                        <input asp-for="TaskID" class="form-control" />
                        <span asp-validation-for="TaskID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AssigneeID" class="control-label"></label>
                        <input asp-for="AssigneeID" class="form-control" />
                        <span asp-validation-for="AssigneeID" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label"></label>
                        <input type="date" id="duedate" name="DueDate" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

