@model HRMS.Models.RequestModel

@{
    ViewData["Title"] = "OnboardRequest";
}

<div class="container">
    <nav class="navbar navbar-light">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="#fff" cursor="pointer" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
            </svg>
            @*<i class="bi bi-arrow-left-circle" style="color:#fff; width:22px; height:22px; cursor:pointer;"></i>*@
        </div>
        <span class="navbar-brand mb-0 m-auto h1">Onboarding Request</span>
    </nav>
    <br />
    <div>
        <form method="post" asp-action="OnboardRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Firstname" class="control-label"></label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Businessunit" class="control-label"></label>
                        <select asp-for="BUnitID"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.Listofbunit, "BUnitID", "Businessunit"))">
                        </select>
                        <span asp-validation-for="BUnitID" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Lastname" class="control-label"></label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Department" class="control-label"></label>
                        <select asp-for="DeptID" id="DeptID" name="DeptID" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Listofdept, "DeptID", "Department"))">
                        </select>
                        <span asp-validation-for="DeptID" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="SDeptID" class="control-label"></label>
                        <select asp-for="SDeptID" id="SDeptID" name="SDeptID" class="form-control"
                                asp-items="@(new SelectList(string.Empty, "SDeptID", "SubDepartment"))">
                        </select>
                        <span asp-validation-for="SDeptID" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Mobile" class="control-label"></label>
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Designation" class="control-label"></label>
                        <input asp-for="Designation" class="form-control" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Doj" class="control-label"></label>
                        <input type="text" id="Doj" name="Doj" class="datepicker form-control" />
                        <span asp-validation-for="Doj" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="ReportingManager" class="control-label"></label>
                        <select asp-for="RMID"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.Listofrm, "RMID", "ReportingManager"))">
                        </select>
                        <span asp-validation-for="RMID" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-8">
                    </div>
                    <div class="col-4">
                        <button type="submit" class="form-control" value="submit"> Continue </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            var sdept = "<option value='0'>Select Sub-Department</option>";
            $('#SDeptID').html(sdept);
        });

        $(document).ready(function () {
            $('#DeptID').change(function () {
                var url = '@Url.Content("~/")' + "EmployeeOnRequest/GETSubDept";
                var ddlsource = "#DeptID";
                $.getJSON(url, { SDeptID: $(ddlsource).val() }, function (data) {
                    var sdept = '';
                    $("#SDeptID").empty();
                    $.each(data, function (i, subdept) {
                        sdept += "<option value" + subdept.value + "'>" + subdept.text + "</options>";
                    });
                    $('#SDeptID').html(sdept);
                });
            });
        });

        $(function () {
            $('.datepicker').datepicker();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
